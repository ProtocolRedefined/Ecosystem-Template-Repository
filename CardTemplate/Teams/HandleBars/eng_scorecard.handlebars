{
  "type": "AdaptiveCard",
  "body": [
    {
      "type": "TextBlock",
      "text": "{{message.teamscorecard.teamDetails.name}}"
    },
    {
      "type": "ColumnSet",
      "columns": [
        {
          "type": "Column",
          "width": "auto",
          "items": [
            {
              "type": "TextBlock",
              "text": "[{{message.teamscorecard.scoreCardOutputs.StaleAccessibilityBugs.count}}]({{message.teamscorecard.scoreCardOutputs.StaleAccessibilityBugs.scoreCardQueryUrl}})"
            },
            {
              "type": "TextBlock",
              "text": "[{{message.teamscorecard.scoreCardOutputs.StaleDTSs.count}}]({{message.teamscorecard.scoreCardOutputs.StaleDTSs.scoreCardQueryUrl}})"
            }
          ]
        },
        {
          "type": "Column",
          "spacing":"extraLarge",
          "items": [
            {
              "type": "TextBlock",
              "text": "{{message.teamscorecard.scoreCardOutputs.StaleAccessibilityBugs.name}}"
            },
            {
              "type": "TextBlock",
              "text": "{{message.teamscorecard.scoreCardOutputs.StaleDTSs.name}}"
            }
          ]
        },
        {
          "type":"Column",
          "items":[
            {
              "type":"Image",
              {{#if message.teamscorecard.scoreCardOutputs.StaleAccessibilityBugs.needsAttention}}
              "url":"https://pluspng.com/img-png/red-cross-png-red-cross-png-file-2000.png",
              {{else}}
              "url":"https://pluspng.com/img-png/green-tick-png-hd-green-tick-png-image-600.png",
              {{/if}}
              "height": "20px",
              "width": "20px"
            },
            {
              "type":"Image",
              {{#if message.teamscorecard.scoreCardOutputs.StaleDTSs.needsAttention}}
              "url":"https://pluspng.com/img-png/red-cross-png-red-cross-png-file-2000.png",
              {{else}}
              "url":"https://pluspng.com/img-png/green-tick-png-hd-green-tick-png-image-600.png",
              {{/if}}
              "height": "20px",
              "width": "20px"
            }
          ]
        }
      ]
    }
  ],
  "$schema": "http://adaptivecards.io/schemas/adaptive-card.json",
  "version": "1.2"
}
