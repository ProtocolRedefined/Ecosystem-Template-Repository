{
    "$schema": "http://adaptivecards.io/schemas/adaptive-card.json",
    "type": "AdaptiveCard",
    "version": "1.2",
    "body": [
        {
            "type": "Container",
            "items":[
                {"type": "Container",
                "items": [
                    {
                        "type": "ColumnSet",
                        "columns": [
                            {
                                "type": "Column",
                                "width": "stretch",
                                "items": [
                                    {
                                        "type": "TextBlock",
                                        "text": "Issue",
                                        "horizontalAlignment": "Center",
                                        "weight": "Bolder"
                                    }
                                ]
                            },
                            {
                                "type": "Column",
                                "width": "auto",
                                "separator": true,
                                "spacing": "Medium",
                                "items": [
                                    {
                                        "type": "TextBlock",
                                        "text": "Assignee",
                                        "horizontalAlignment": "Center",
                                        "weight": "Bolder"
                                    }
                                ]
                            },
                            {
                                "type": "Column",
                                "width": "auto",
                                "separator": true,
                                "spacing": "Medium",
                                "items": [
                                    {
                                        "type": "TextBlock",
                                        "text": "Status",
                                        "horizontalAlignment": "Center",
                                        "weight": "Bolder"
                                    }
                                ]
                            }
                        ]
                    }
                ]}
                
                  {{#each issues}}
                  ,
    {"type": "Container",
                "items": [
                    {
                        "type": "ColumnSet",
                        "columns": [
                            {
                                "type": "Column",
                                "width": "stretch",
                                "items": [
                                    {
                                        "type": "TextBlock",
                                        "text": "{{title}}",
                                        "horizontalAlignment": "Center",
                                        "weight": "Bolder"
                                    }
                                ]
                            },
                            {
                                "type": "Column",
                                "width": "auto",
                                "separator": true,
                                "spacing": "Medium",
                                "items": [
                                    {
                                        "type": "TextBlock",
                                        "text": "{{assignee}}",
                                        "horizontalAlignment": "Center"
                                    }
                                ]
                            },
                            {
                                "type": "Column",
                                "width": "auto",
                                "separator": true,
                                "spacing": "Medium",
                                "items": [
                                    {
                                        "type": "TextBlock",
                                        "text": "{{status}}",
                                        "horizontalAlignment": "Center",
                                        "weight": "Bolder"
                                    }
                                ]
                            }
                        ]
                    }
                ]}
  {{/each}}
                
            ]
            
        }
    ]
}
