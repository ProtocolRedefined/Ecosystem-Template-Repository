{
    "$schema": "http://adaptivecards.io/schemas/adaptive-card.json",
    "type": "AdaptiveCard",
    "version": "1.2",
    "body": [
        {
            "type": "TextBlock",
            "text": "Issue Report",
            "size": "Large",
            "isSubtle": true,
            "color": "warning"
        },
        {
            "type": "TextBlock",
            "text": "",
            "spacing": "None"
        },
        {
            "type": "ColumnSet",
            "columns": [
                {
                    "type": "Column",
                    "width": "auto",
                    "items": [
                        {
                            "type": "Image",
                            "url": "https://upload.wikimedia.org/wikipedia/commons/thumb/e/ec/Octicons-issue-opened.svg/1050px-Octicons-issue-opened.svg.png",
                            "size": "Large"
                        }
                    ]
                },
                {
                    "type": "Column",
                    "width": "stretch",
                    "items": [
                        {
                            "type": "TextBlock",
                            "size": medium,
                            "text": "[All Issues : {{ allIssues }}]({{ allIssuesLink }})"
                        },
                        {
                            "type": "TextBlock",
                            "size": medium,
                            "text": "[Open Issues : {{ openIssues }}]({{ openIssuesLink }})"
                        },
                        {
                            "type": "TextBlock",
                            "size": medium,
                            "text": "[Closed Issues : {{ closedIssues }}]({{ closedIssuesLink }})"
                        }
                    ]
                }
            ]
        }
    ]
}
